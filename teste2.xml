<?xml version="1.0" encoding="UTF-8"?>
<evaml name="teste2" >
  <settings>
    <voice tone="en-US_AllisonV3Voice"  />
    <lightEffects mode="on" />
    <audioEffects mode="on" vol="100%" />
  </settings>
  <script>
    <counter var="i" op="=" value="1" />
    <switch id="LOOP" var="i">
      <case op="eq" value="1">
        <light state="on" color="red" />
        <counter  var="i" op="+" value="1" />
      </case>
      <case op="eq" value="2">
        <light state="on" color="blue" />
        <counter  var="i" op="+" value="1" />
      </case>
      <case op="eq" value="3">
        <light state="on" color="green" />
        <counter  var="i" op="+" value="1" />
      </case>
      <default>
        <light state="on" color="pink" />
        <stop />
      </default>
    </switch>
    <wait duration="1000" />
    <goto target="LOOP" />
  </script>
</evaml>
