<?xml version="1.0" encoding="UTF-8"?>
<!-- voz portugues: pt-BR_IsabelaV3Voice -->
<!-- voz portugues: en-US_AllisonV3Voice" -->
<evaml id="a1001-b3001" name="Script02">
	<settings>
		<voice tone="pt-BR_IsabelaV3Voice" />
		<light-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
  <script>
		<random id="PONTO1" min="1" max="2" />
		<switch var="$">
			<case op="exact" value="1">
				<light state="on" color="red" />
				<random min="3" max="4" />
				<switch var="$">
					<case op="exact" value="3">
						<light state="on" color="blue" />
					</case>
					<case op="exact" value="4">
						<light state="on" color="pink" />
					</case>
				</switch>
			</case>
			<case op="exact" value="2">
				<light id="PONTO2" state="on" color="green" />
				<random min="5" max="6" />
				<switch var="$">
					<case op="exact" value="5">
						<light state="on" color="blue" />
						<goto target="PONTO1" />
					</case>
					<case op="exact" value="6">
						<light state="on" color="pink" />
						<goto target="PONTO2" />
					</case>
				</switch>
			</case>
		</switch>
		<talk>Fim do script</talk>
	</script>
  <macros>
  </macros>
</evaml>
