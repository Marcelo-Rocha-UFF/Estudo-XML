<?xml version="1.0" encoding="UTF-8"?>
<evaml name="script02"
xsi:noNamespaceSchemaLocation="/home/marcelo/Dropbox/Estudo XML/EvaML-Schema/evaml_schema.xsd"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<settings>
		<voice tone="pt-BR_IsabelaV3Voice" />
		<lightEffects mode="on" />
		<audioEffects mode="on" vol="100%" />
	</settings>
  <script>
		<random id="PONTO1" min="1" max="2" />
		<switch var="$">
			<case op="exact" value="1">
				<light state="on" color="red" />
				<wait duration="2000" />
				<random min="3" max="4" />
				<switch var="$">
					<case op="exact" value="3">
						<wait duration="2000" />
						<light state="on" color="blue" />
					</case>
					<case op="exact" value="4">
						<wait duration="2000" />
						<light state="on" color="pink" />
					</case>
				</switch>
			</case>
			<case op="exact" value="2">
				<wait duration="2000" />
				<light id="PONTO2" state="on" color="green" />
				<random min="5" max="6" />
				<switch var="$">
					<case op="exact" value="5">
						<wait duration="2000" />
						<light state="on" color="blue" />
						<goto target="PONTO1" />
					</case>
					<case op="exact" value="6">
						<wait duration="2000" />
						<light state="on" color="pink" />
						<wait duration="2000" />
						<goto target="PONTO2" />
					</case>
				</switch>
			</case>
		</switch>
		<talk>Fim do script</talk>
	</script>
</evaml>
