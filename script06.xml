<?xml version="1.0" encoding="UTF-8"?>
<evaml name="script06"
  xsi:noNamespaceSchemaLocation="/home/marcelo/Dropbox/Estudo XML/EvaML-Schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
      <voice tone="en-US_AllisonV3Voice" />
      <lightEffects mode="on" />
      <audioEffects mode="on" vol="100%" />
    </settings>
  <script>
		<light id="INICIO" state="on" color="white" />
		<counter var="x" op="=" value="0"  />
		<counter id="SOMA1" var="x" op="+" value="1" />
		<switch var="x">
			<case op="eq" value="1">
				<light state="on" color="blue" />
				<wait duration="3000" />
				<goto target="SOMA1" />
			</case>
			<case op="eq" value="2">
				<light state="on" color="green" />
				<wait duration="3000" />
				<goto target="SOMA1" />
			</case>
			<case op="eq" value="3">
				<light state="on" color="red" />
				<wait duration="3000" />
				<goto target="SOMA1" />
			</case>
			<case op="gt" value="3">
				<light state="on" color="pink" />
				<wait duration="3000" />
			</case>
		</switch>
		<talk>Vou recome√ßar</talk>
		<goto target="INICIO" />
	</script>
</evaml>
