<?xml version="1.0" encoding="UTF-8"?>
<evaml name="teste5"
  xsi:noNamespaceSchemaLocation="/home/marcelo/Dropbox/Estudo XML/EvaML-Schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
      <voice tone="en-US_AllisonV3Voice" />
      <lightEffects mode="on" />
      <audioEffects mode="on" vol="100%" />
    </settings>
  <script>
    <random id="LOOP" min="1" max="4" />
    <switch var="$">
      <case op="eq" value="1">
        <light state="on" color="red" />
      </case>
      <case op="eq" value="2">
        <light state="on" color="blue" />
      </case>
      <case op="eq" value="3">
        <light state="on" color="green" />
      </case>
      <default>
        <light state="on" color="pink" />
        <stop />
      </default>
    </switch>
    <wait duration="1000" />
    <goto target="LOOP" />
  </script>
</evaml>
