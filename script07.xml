<?xml version="1.0" encoding="UTF-8"?>
<evaml name="script07"
  xsi:noNamespaceSchemaLocation="/home/marcelo/Dropbox/Estudo XML/EvaML-Schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
      <voice tone="en-US_AllisonV3Voice" />
      <lightEffects mode="on" />
      <audioEffects mode="on" vol="100%" />
    </settings>
  <script>
		<counter var="x" op="=" value="0" />
		<light id="INICIO" state="on" color="white" />
		<talk>Está chovendo agora?</talk>
		<listen />
		<switch var="$">
			<case op="contain" value="sim">
				<talk>Isso mesmo! Está chovendo</talk>
				<counter var="x" op="+" value="1" />
				<switch var="x">
					<case op="eq" value="3">
						<talk>O x chegou a 3, vou terminar</talk>
					</case>
					<case op="lt" value="3">
						<goto target="INICIO" />
					</case>
				</switch>
			</case>
			<case op="contain" value="não">
				<talk>Você errou! Tente novamente</talk>
				<goto target="INICIO" />
			</case>
		</switch>
	</script>
</evaml>
