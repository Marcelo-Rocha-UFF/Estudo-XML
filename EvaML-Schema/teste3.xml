<?xml version="1.0" encoding="UTF-8"?>
<evaml
  name="teste3"
  xsi:noNamespaceSchemaLocation="/home/marcelo/Dropbox/Estudo XML/EvaML-Schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
    <voice tone="pt-BR_IsabelaV3Voice" />
    <lightEffects mode="on" />
    <audioEffects mode="on" />
  </settings>
  <script>
    <useMacro name="M1" />
    <light id="AQUI" state="on"/>
    <wait duration="1000" />
    <audio source="mario" block="false"/>
    <switch id="ALI" var="$">
      <case op="gte" value="100">
      </case>
    </switch>
    <stop />
    <counter var="$" op="=" value="1" />
    <audio source="sdasd" block="true" />
    <led id="OI" animation="happy" />
  </script>
  <macros>
    <macro name="M1">
      <led animation="happy" />
    </macro>
  </macros>
</evaml>
