    </case>
          <default key="1058" var="$" value="" op="exact">
            <evaEmotion emotion="sad" key="1059" />
      <talk key="1060">You are wrong</talk>
    </default>
        </switch>
      </case>
      <case op="eq" value="3" key="1061" var="$">
        <evaEmotion emotion="angry" key="1062" />
        <light state="on" color="red" key="1063" />
        <talk key="1064">Can you imitate me?</talk>
      <userEmotion key="1065" />
    <switch var="$" key="1066">
