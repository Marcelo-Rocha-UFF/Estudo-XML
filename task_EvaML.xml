        <light state="off" key="1034" />
        <stop />
      </case>
    </switch>
    
    <talk key="1035">I will show an emotion and you try to imitate me</talk>
    <counter var="score" op="=" value="0" key="1036" />
    <counter var="chance" op="=" value="0" key="1037" />
    <random id="LOOP" min="1" max="3" key="1038" />
