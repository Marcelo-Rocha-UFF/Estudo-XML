      <case op="eq" value="1" key="1039" var="$">
        <evaEmotion emotion="sad" key="1040" />
        <light state="on" color="blue" key="1041" />
        <talk key="1042">Can you imitate me?</talk>
      <userEmotion key="1043" />
    <switch var="$">
          <case op="exact" value="sad" key="1044" var="$">
            <evaEmotion emotion="happy" key="1045" />
      <talk key="1046">Ok! You are correct</talk>
      <counter var="score" op="+" value="1" key="1047" />
    </case>
          <default key="1048" var="$" value="" op="exact">
            <evaEmotion emotion="sad" key="1049" />
      <talk key="1050">You are wrong</talk>
    </default>
        </switch>
      </case>
      <case op="eq" value="2" key="1051" var="$">
        <evaEmotion emotion="happy" key="1052" />
        <light state="on" color="yellow" key="1053" />
        <talk key="1054">Can you imitate me?</talk>
      <userEmotion key="1055" />
    <switch var="$">
          <case op="exact" value="happy" key="1056" var="$">
            <evaEmotion emotion="happy" key="1057" />
      <talk key="1058">Ok! You are correct</talk>
      <counter var="score" op="+" value="1" key="1059" />
    </case>
          <default key="1060" var="$" value="" op="exact">
            <evaEmotion emotion="sad" key="1061" />
      <talk key="1062">You are wrong</talk>
    </default>
        </switch>
      </case>
      <case op="eq" value="3" key="1063" var="$">
        <evaEmotion emotion="angry" key="1064" />
        <light state="on" color="red" key="1065" />
        <talk key="1066">Can you imitate me?</talk>
      <userEmotion key="1067" />
    <switch var="$">
          <case op="exact" value="angry" key="1068" var="$">
            <evaEmotion emotion="happy" key="1069" />
      <talk key="1070">Ok! You are correct</talk>
      <counter var="score" op="+" value="1" key="1071" />
    </case>
          <default key="1072" var="$" value="" op="exact">
            <evaEmotion emotion="sad" key="1073" />
      <talk key="1074">You are wrong</talk>
    </default>
        </switch>
      </case>
    </switch>
    <counter var="chance" op="+" value="1" key="1075" />
    <switch var="chance">
      <case op="eq" value="3" key="1076" var="chance">
        <evaEmotion emotion="happy" key="1077" />
        <talk key="1078">Your score was #score</talk>
        <talk key="1079">It was good to play with you $2. Bye</talk>
        <light state="off" key="1080" />
        <stop />
      </case>
      <default key="1081" var="chance" value="" op="exact">
        <goto target="LOOP" />
      </default>
    </switch>
