    </case>
          <default key="1071" var="$" value="" op="exact">
            <evaEmotion emotion="sad" key="1072" />
      <talk key="1073">You are wrong</talk>
    </default>
        </switch>
      </case>
    </switch>
    <counter var="chance" op="+" value="1" key="1074" />
    <switch var="chance" key="1075">
      <case op="eq" value="3" key="1076" var="chance">
        <evaEmotion emotion="happy" key="1077" />
        <talk key="1078">Your score was #score</talk>
        <talk key="1079">It was good to play with you $1. Bye</talk>
        <light state="off" key="1080" />
        <stop />
      </case>
      <default key="1081" var="chance" value="" op="exact">
