<?xml version="1.0" encoding="UTF-8"?>
<evaml  name="script01" >
	<settings>
		<voice tone="en-US_AllisonV3Voice"  />
		<light-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
<script>
  <light state="on" color="white" />
  <talk>Hi, I'm the robot Eva and I'm a socially assistive robot</talk>
  <talk>What is your name?</talk>
  <listen />
  <talk>Hi $, how are you? Let's start the script</talk>
  <counter var="x" op="=" value="0" />
	<counter var="y" op="=" value="3" />
	<counter id="INCREMENT_X" var="x" op="+" value="1" />
  <switch var="x">
    <case op="lte" value="3">
      <talk>The value of x is #x</talk>
      <goto target="INCREMENT_X" />
    </case>
    <case op="gt" value="#y">
      <talk>The value of x is #x and its greater than the value of y, that is #y</talk>
    </case>
  </switch>
  <talk>Hey $, I will terminate. Bye</talk>
  <light state="off" />
</script>
<macros>
</macros>
</evaml>