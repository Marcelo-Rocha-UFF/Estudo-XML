<?xml version="1.0" encoding="UTF-8"?>
<evaml name="script11"
  xsi:noNamespaceSchemaLocation="/home/marcelo/Dropbox/Estudo XML/EvaML-Schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
      <voice tone="en-US_AllisonV3Voice" />
      <lightEffects mode="on" />
      <audioEffects mode="off" vol="100%" />
    </settings>
	<script>
		<switch var="x">
			<case op="eq" value="1">
				<talk>1</talk>
			</case>
			<case op="eq" value="2">
				<talk>2</talk>
			</case>
			<case op="eq" value="3">
				<talk>3</talk>
			</case>
			<default>
				<talk>Something is wrong</talk>
			</default>
		</switch>
	</script>
</evaml>
