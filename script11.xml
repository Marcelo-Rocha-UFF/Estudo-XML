<?xml version="1.0" encoding="UTF-8"?>
<evaml name="script11">
	<settings>
		<voice tone="en-US_AllisonV3Voice" />
		<lightEffects mode="on" />
		<audioEffects mode="on" volume="100%" />
	</settings>
	<script>
		<useMacro macro="GREETINGS" />
		<light state="on" color="blue" />
		<counter var="x" op="=" value="1" />
		<switch var="x">
			<case op="lte" value="0">
				<talk>Ok</talk>
			</case>
			<default>
				<talk>Wrong</talk>
			</default>
		</switch>
	</script>
	<macros>
		<macro id="GREETINGS">
			<talk>Hi! I am the robot EVA</talk>
		</macro>
	</macros>
</evaml>
