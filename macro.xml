      <light state="on" color="#ff0000" />
      <light state="on" color="#ff0000" />
      <light state="on" color="#ff0000" />
      <light state="on" color="#ff0000" />
    </macro>]
    <macro name="CONGRATS">
      <wait duration="5678" />
