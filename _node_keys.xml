<evaml name="script08" id="b4f62949f089043b7593b616e7fa3060">
	<settings>
		<voice tone="pt-BR_IsabelaV3Voice" key="1000" />
		<light-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
	<script>
		<talk key="1001">Olá, eu sou o robô EVA</talk>
		<audio source="mario-game-intro" block="true" key="1002" />
		<talk key="1003">Qual o seu nome?</talk>
		<listen key="1004" />
		<talk key="1005">Vou sortear um número de um a três</talk>
			<talk key="1006">quero ver se você consegue advinhar $</talk>
		<counter var="p" op="=" value="0" key="1007" /> 
		<counter var="i" op="=" value="1" key="1008" /> 
		<talk id="INICIO" key="1009">Vamos lá então</talk>
		<wait duration="1000" key="1010" />
		<light state="on" color="white" key="1011" />
		<random min="1" max="3" key="1012" />
		<switch var="$">
			<case op="eq" value="1" key="1013">
				<light state="on" color="blue" key="1014" />
				<talk key="1015">Qual foi o número?</talk>
				<listen key="1016" />
				<switch var="$">
					<case op="contain" value="1" key="1017">
						<talk key="1018">Parabéns, eu pensei no número 1. Você acertou!</talk>
						<counter var="p" op="+" value="1" key="1019" />
					</case>
					<default key="1020">
						<talk key="1021">Você errou, eu pensei no número um</talk>
					</default>
				</switch>
			</case>
			<case op="eq" value="2" key="1022">
				<light state="on" color="pink" key="1023" />
				<talk key="1024">E ai? Qual foi  o número?</talk>
				<listen key="1025" />
				<switch var="$">
					<case op="contain" value="2" key="1026">
						<talk key="1027">Parabéns, eu pensei no número 2. Você acertou!</talk>
						<counter var="p" op="+" value="1" key="1028" />
					</case>
					<default key="1029">
						<talk key="1030">Você errou, eu pensei no número dois</talk>
					</default>
				</switch>
			</case>
			<case op="eq" value="3" key="1031">
				<light state="on" color="green" key="1032" />
				<talk key="1033">E ai? Qual foi  o número?</talk>
				<listen key="1034" />
				<switch var="$">
					<case op="contain" value="3" key="1035">
						<talk key="1036">Parabéns, eu pensei no número 3. Você acertou!</talk>
						<counter var="p" op="+" value="1" key="1037" />
					</case>
					<default key="1038">
						<talk key="1039">Você errou, eu pensei no número três</talk>
					</default>
				</switch>
			</case>
		</switch>
		<light state="on" color="white" key="1040" />
		<switch var="i">
			<case op="eq" value="3" key="1041">
				<talk key="1042">O seu número de pontos foi #p</talk>
				<talk key="1043">Já vou embora / Está ficando tarde / Pra mim já deu</talk>
		<audio source="mario-end" block="true" key="1044" />
				<light state="off" color="black" key="1045" />
				<stop />
			</case>
			<default key="1046">
				<counter var="i" op="+" value="1" key="1047" />
				<goto target="INICIO" />
			</default>
		</switch>
	</script>
	</evaml>