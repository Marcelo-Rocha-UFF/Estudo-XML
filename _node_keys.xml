      <switch var="$">
        <case op="eq" value="1" key="1033" child_proc="false">
          <evaEmotion emotion="sad" key="1034" />
          <light state="on" color="blue" key="1035" />
          <talk key="1036">Can you imitate me?</talk>
      <userEmotion key="1037" />
    <switch var="$">
            <case op="exact" value="sad" key="1038" child_proc="false">
              <evaEmotion emotion="happy" key="1039" />
      <talk key="1040">Ok! You are correct</talk>
      <counter var="score" op="+" value="1" key="1041" />
    </case>
            <default key="1042" child_proc="false">
              <evaEmotion emotion="sad" key="1043" />
      <talk key="1044">You are wrong</talk>
    </default>
          </switch>
        </case>
        <case op="eq" value="2" key="1045" child_proc="false">
          <evaEmotion emotion="happy" key="1046" />
          <light state="on" color="yellow" key="1047" />
          <talk key="1048">Can you imitate me?</talk>
      <userEmotion key="1049" />
    <switch var="$">
            <case op="exact" value="happy" key="1050" child_proc="false">
