<evaml name="Script07" id="ef94988f4cad64dfbc8797823c4318c8">
	<settings>
		<voice tone="pt-BR_IsabelaV3Voice" key="1000" />
		<light-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
  <script>
		<counter var="x" op="=" value="0" key="1001" />
		<light id="INICIO" state="on" color="white" key="1002" />
		<talk key="1003">Está chovendo agora?</talk>
		<listen key="1004" />
		<switch var="$">
			<case op="contain" value="sim" key="1005">
				<talk key="1006">Isso mesmo! Está chovendo</talk>
				<counter var="x" op="+" value="1" key="1007" />
				<switch var="x">
					<case op="eq" value="3" key="1008">
						<talk key="1009">O x chegou a 3, vou terminar</talk>
					</case>
					<case op="lt" value="3" key="1010">
						<goto target="INICIO" />
					</case>
				</switch>
			</case>
			<case op="contain" value="não" key="1011">
				<talk key="1012">Você errou! Tente novamente</talk>
				<goto target="INICIO" />
			</case>
		</switch>
	</script>
  </evaml>