<?xml version="1.0" encoding="UTF-8"?>
<evaml  name="script01" >
	<settings>
		<voice tone="en-US_AllisonV3Voice"  />
		<light-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
<script>
  <random min="1" max="5" />
  <switch var="$">
    <case op="eq" value="1">
      <talk>The number drawn was 1</talk>
    </case>
    <case op="eq" value="2">
      <talk>The number drawn was 2</talk>
    </case>
    <default>
      <talk>The number drawn was neither 1 nor 2</talk>
      <light state="on" color="green" />
    </default>
  </switch>
</script>
<macros>
</macros>
</evaml>