<?xml version="1.0" encoding="UTF-8"?>
<evaml name="teste" >
  <settings>
    <voice tone="en-US_AllisonV3Voice"  />
    <lightEffects mode="on" />
    <audioEffects mode="on" vol="100%" />
  </settings>
  <script>
    <random id="BEGIN" min="1" max ="3" />
    <switch var="$">
      <case op="eq" value="1">
      <talk>The value is 1</talk>
      </case>
      <case op="eq" value="2">
        <talk>The value is 2</talk>
      </case>
      <default>
        <talk>The value was $</talk>
      </default>
    </switch>
    <switch var="$">
      <case op="eq" value="1">
        <light state="on" color="red" />
      </case>
      <case op="eq" value="2">
        <light state="on" color="blue" />
      </case>
      <default>
        <light state="on" color="green" />
      </default>
    </switch>
  </script>
</evaml>