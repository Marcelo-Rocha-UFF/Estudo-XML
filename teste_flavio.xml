<?xml version="1.0" encoding="UTF-8"?>
<evaml name="teste_flavio"
  xsi:noNamespaceSchemaLocation="/home/marcelo/Dropbox/Estudo XML/EvaML-Schema/evaml_schema.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <settings>
    <voice tone="en-US_AllisonV3Voice" />
  </settings>
  <script>
    <light state="on" color="#cc00cc"/>
    <counter var="x" op="=" value="2" />
    <counter var="x" op="+" value="2" />
    <switch var="$">
      <case op="exact" value="2">
        <stop />
      </case>
      <default>
        <evaEmotion emotion="sad" />
      </default>
    </switch>
  </script>
  <macros>
    <macro id="Teste">
      <audio source="applause-moderate" block="true" />
    </macro>
  </macros>
</evaml>