<?xml version="1.0" encoding="UTF-8"?>
<!-- voz portugues: pt-BR_IsabelaV3Voice -->
<!-- voz inglês: en-US_AllisonV3Voice" -->
<evaml name="game-of-imitation-eng">
	<settings>
		<voice tone="en-US_AllisonV3Voice" />
		<light-effects mode="on" />
		<audio-effects mode="on" vol="100%" />
	</settings>
	<script>
		<!-- Saudação e apresentação do jogo-->
		<light state="on" color="white" />
		<evaEmotion emotion="neutral" />
		<talk>Hi, I'm robot Eva!</talk>
		<audio source="mario-game-intro" block="true" />
		<talk>let's play a different game</talk>
		<evaEmotion emotion="happy" />
		<audio source="mario-start" block="true" />
		<evaEmotion emotion="neutral" />
		<talk>What's your name?</talk>
		<audio source="mario-sound1" block="false" />
		<listen />
		<talk>That Cool!</talk>
		<talk>Let's go $</talk>

		<!-- ############ Primeira emoção com apenas uma tentativa ############ -->
		<evaEmotion emotion="neutral" />
		<talk>I will show an emotion and you try to imitate me</talk>
		<audio source="mario-game-intro" block="true" />
		<talk>I feel happy</talk>
		<evaEmotion emotion="happy" />
		<light state="on" color="#ffc000" />
		<audio source="mario-sound1" block="true" />
		<talk>Can you imitate me?</talk>
		<audio source="mario-fundo" block="false" />
		<userEmotion />
		<switch var="$">
			<case op="exact" value="happy">
				<audio source="mario-start2" block="true" />
				<talk>Congratulations, you got it right!</talk>
			</case>
			<default>
				<audio source="mario-game-intro" block="true" />
			</default>
		</switch>

		<!-- ############ Segunda emoção com apenas uma tentativa ############ -->
		<evaEmotion emotion="neutral" />
		<light state="on" color="white" />
		<talk>I will demonstrate another emotion</talk>
		<audio source="mario-game-intro" block="true" />
		<talk>I feel angry</talk>
		<evaEmotion emotion="angry" />
		<light state="on" color="#ff0000" />
		<audio source="mario-sound1" block="true" />
		<talk>Can you imitate me?</talk>
		<audio source="mario-fundo" block="false" />
		<userEmotion />
		<switch var="$">
			<case op="exact" value="angry">
				<audio source="mario-start2" block="true" />
				<talk>Congratulations, you did it!</talk>
			</case>
			<default>
				<audio source="mario-game-intro" block="true" />
			</default>
		</switch>	

		<!-- ############ Terceira emoção com apenas uma tentativa ############ -->
		<evaEmotion emotion="neutral" />
		<light state="on" color="white" />
		<talk>I will demonstrate one more emotion</talk>
		<audio source="mario-game-intro" block="true" />
		<talk>I feel sad</talk>
		<evaEmotion emotion="sad" />
		<light state="on" color="blue" />
		<audio source="mario-sound1" block="true" />
		<talk>Can you imitate me?</talk>
		<audio source="mario-fundo" block="false" />
		<userEmotion />
		<switch var="$">
			<case op="exact" value="sad">
				<audio source="mario-start2" block="true" />
				<talk>Congratulations, you did it!</talk>
			</case>
			<default>
				<audio source="mario-game-intro" block="true" />
			</default>
		</switch>		
		<evaEmotion emotion="happy" />
		<light state="on" color="white" />
		<talk>It was great playing with you $1</talk>
		<audio source="mario-game-fim" block="true" />
		<light state="off" />
	</script>
	<macros>
	</macros>
</evaml>
